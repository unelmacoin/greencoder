{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "./out",
    "lib": ["ES2020"],
    "sourceMap": true,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowJs": true,
    "rootDir": "./src",
    "baseUrl": ".",
    "types": ["node", "vscode"]
  },
  "exclude": ["node_modules", ".vscode-test", "out", "examples/sample.js", "src/ui/**/*"],
  "include": ["src/**/*"]
}
