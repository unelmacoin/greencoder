{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "./out",
    "lib": ["ES2020", "DOM"],
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "jsx": "react",
    "allowJs": true,
    "rootDir": "./src",
    "baseUrl": "."
  },
  "exclude": ["node_modules", ".vscode-test", "out", "sample.js"],
  "include": ["src/**/*"]
}
